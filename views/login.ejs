<%- include('header',{name:"" }); -%>

<div class="jumbotron">
    <div class="container">
        <h1 class="center">Login Page</h1>
        <form method="post" action="/login">
            <div class="col-lg-12 pd">
                <label>Username:</label>
                <input type="text" name="username">
            </div>
            <div class="col-lg-12 pd">
                <label>Password:</label>
                <input type="text" name="password">
            </div>

            <div class="col-lg-12">
                <br />
                <div class="float-left col-lg-2" ><input type="submit" value="Login" class="btn btn-success"></div>
                <div class="float-right col-lg-2"><a href="/signup" >Create a New Account</a></div>
            </div>
        
            <% if ( loginErrorMsg ) { %>

                <div class="col-lg-12 pd alert alert-danger pd">
                    <p class=""><strong>Error!</strong> <%= loginErrorMsg %></p>
                </div>   
            <% } %>
        </form> 
    </div>
</div>

<%- include('footer'); -%>