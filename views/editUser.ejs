<%- include('header',{name:"" }); -%>
<div class="jumbotron">
    <div class="container">
    <h1>Edit Form</h1>
    <div class="row">
      <div class="col-lg-12 pd">
        <form method="post" action="/editUser/<%- data._id%>">
          <div class="col-lg-12 pd">
            <label class="col-lg-2 pd">FirstName:</label>
            <input type="text" name="firstName" class="col-lg-4 pd" value="<%= data.firstName %>">
          </div>
          <div class="col-lg-12 pd">
            <label class="col-lg-2 pd">LastName:</label>
            <input type="text" name="lastName" class="col-lg-4 pd" value="<%= data.lastName %>">
          </div>
          <div class="col-lg-12 pd">
            <label class="col-lg-2 pd">Roles:</label>
            <select name="roles" class="col-lg-4 pd" >
            <% roles.forEach(function(role){ 
              var selectedRole = ( role == data.roles ) ? "selected" : ""; 
            %>
            <option value="<%- role %>" <%=selectedRole %>><%-  role %></option>
               <% }); %> 
            </select > 
          </div>
          <div class="col-lg-12 pd">
            <label class="col-lg-2 pd">Email:</label>
            <input type="text" name="email" class="col-lg-4 pd" value="<%= data.email %>">
          </div>
          <div class="col-lg-12 pd">
            <label class="col-lg-2 pd">Password:</label>
            <input type="text" name="password" class="col-lg-4 pd" value="<%= data.password %>">
          </div>
          <div class="col-lg-12 pd">
            <label class="col-lg-2 pd">PhoneNo:</label>
            <input type="text" name="phoneNo" class="col-lg-4 pd" value="<%= data.phoneNo %>">
          </div>
          <div class="col-lg-12 pd">
            <label class="col-lg-2 pd">City:</label>
            <select name="city" class="col-lg-4 pd">
            <% city.forEach(function(city){ 
              var selectedCity = ( city == data.city ) ? "selected" : ""; 
            %>
              <option value="<%-  city %>" <%=selectedCity %>><%-  city %></option>
               <% }); %> 
            </select > 
          </div >
          <div class="col-lg-12 pd">
          <label class="col-lg-2 pd">State : </label>
          <select name="state" class="col-lg-4 pd">
          <% state.forEach(function(state){ 
            var selectedState = ( state == data.state ) ? "selected" : ""; 
          %>
            <option value="<%- state %>" <%= selectedState %> ><%-  state %></option>
             <% }); %> 
          </select > 
          </div>
          <div class="col-lg-12 pd">
            <label class="col-lg-2 pd">Country:</label>
            <select name="country" class="col-lg-4 pd">
                <% country.forEach(function(country){ 
                  var selectedCountry = ( country == data.country ) ? "selected" : "";
                %>
                    <option value="<%-  country %>" <%=selectedCountry %>><%-  country %></option>
                <% }); %> 
            </select > 
          </div>


           <div class="col-lg-12 pd">
                <br />
                <div class="float-left col-lg-5 pd" ><input type="submit" value="Edit User" class="btn btn-success"></div>
            </div>
        </form>    
      </div>
    </div>
  </div>
</div>1